<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Stocks Core</display-name>
  
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>CreateActions</web-resource-name>
			<url-pattern>/user/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
			<role-name>regular</role-name>
		</auth-constraint>
	</security-constraint>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>ManageAction</web-resource-name>
			<url-pattern>/finance/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	
  	<login-config>
	<auth-method>FORM</auth-method>
	<form-login-config>
		<form-login-page>/Login.jsp</form-login-page>
		<form-error-page>/LoginError.jsp</form-error-page>
	</form-login-config>
	</login-config>
	
	
	<security-role>
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<role-name>regular</role-name>
	</security-role>
	
</web-app>
