<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
 <display-name>Stocks Core</display-name>
 <filter>
  <filter-name>filter</filter-name>
  <filter-class>ir.stocks.controller.StyleFilter</filter-class>
 </filter>
 <filter-mapping>
  <filter-name>filter</filter-name>
  <url-pattern>/*</url-pattern>
 </filter-mapping>
 <servlet>
  <servlet-name>index-jsp</servlet-name>
  <jsp-file>/Index.jsp</jsp-file>
 </servlet>
 <servlet>
  <servlet-name>index-jsp2</servlet-name>
  <jsp-file>/Index.jsp</jsp-file>
 </servlet>
 <servlet>
  <servlet-name>login</servlet-name>
  <jsp-file>/Login.jsp</jsp-file>
 </servlet>
 <servlet>
  <servlet-name>logout</servlet-name>
  <jsp-file>/Logout.jsp</jsp-file>
 </servlet>
 <servlet>
  <servlet-name>signUp_form</servlet-name>
  <jsp-file>/SignUp.jsp</jsp-file>
 </servlet>
 <servlet>
  <servlet-name>deposit-user-manager</servlet-name>
  <jsp-file>/DepositUserManager.jsp</jsp-file>
 </servlet>
 <servlet>
  <servlet-name>user-manager</servlet-name>
  <jsp-file>/UserManager.jsp</jsp-file>
 </servlet>
 <servlet-mapping>
  <servlet-name>index-jsp</servlet-name>
  <url-pattern>/app/</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>index-jsp2</servlet-name>
  <url-pattern>/app/forcelogin</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>login</servlet-name>
  <url-pattern>/app/login</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>logout</servlet-name>
  <url-pattern>/app/logout</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>signUp_form</servlet-name>
  <url-pattern>/app/signUp-form</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>deposit-user-manager</servlet-name>
  <url-pattern>/app/credit</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>user-manager</servlet-name>
  <url-pattern>/app/usermanager</url-pattern>
 </servlet-mapping>
 <mime-mapping>
  <extension>css</extension>
  <mime-type>text/css</mime-type>
 </mime-mapping>
 <mime-mapping>
  <extension>js</extension>
  <mime-type>text/javascript</mime-type>
 </mime-mapping>
 <mime-mapping>
  <extension>.woff</extension>
  <mime-type>application/x-font-woff</mime-type>
 </mime-mapping>
 <mime-mapping>
  <extension>.woff2</extension>
  <mime-type>application/x-font-woff2</mime-type>
 </mime-mapping>
 <mime-mapping>
  <extension>.ttf</extension>
  <mime-type>application/x-font-ttf</mime-type>
 </mime-mapping>
 <error-page>
  <error-code>404</error-code>
  <location>/404.jsp</location>
 </error-page>
 <error-page>
  <error-code>403</error-code>
  <location>/403.jsp</location>
 </error-page>
 <security-constraint>
  <web-resource-collection>
   <web-resource-name>force-login</web-resource-name>
   <url-pattern>/forcelogin</url-pattern>
  </web-resource-collection>
  <auth-constraint>
   <role-name>admin</role-name>
   <role-name>member</role-name>
   <role-name>finance</role-name>
   <role-name>company</role-name>
  </auth-constraint>
 </security-constraint>
 <security-constraint>
  <web-resource-collection>
   <web-resource-name>user-actions</web-resource-name>
   <url-pattern>/user/*</url-pattern>
  </web-resource-collection>
  <auth-constraint>
   <role-name>admin</role-name>
   <role-name>member</role-name>
  </auth-constraint>
 </security-constraint>
 <security-constraint>
  <web-resource-collection>
   <web-resource-name>finance-actions</web-resource-name>
   <url-pattern>/finance/*</url-pattern>
  </web-resource-collection>
  <auth-constraint>
   <role-name>finance</role-name>
   <role-name>admin</role-name>
  </auth-constraint>
 </security-constraint>
 <security-constraint>
  <display-name>security-constraint</display-name>
  <web-resource-collection>
   <web-resource-name>admin-actions</web-resource-name>
   <url-pattern>/admin/*</url-pattern>
  </web-resource-collection>
  <auth-constraint>
   <role-name>admin</role-name>
  </auth-constraint>
 </security-constraint>
 <security-constraint>
  <display-name>security-constraint</display-name>
  <web-resource-collection>
   <web-resource-name>company-actions</web-resource-name>
   <url-pattern>/company/*</url-pattern>
  </web-resource-collection>
  <auth-constraint>
   <role-name>admin</role-name>
   <role-name>company</role-name>
  </auth-constraint>
 </security-constraint>
 <login-config>
  <auth-method>FORM</auth-method>
  <form-login-config>
   <form-login-page>/Login.jsp</form-login-page>
   <form-error-page>/LoginError.jsp</form-error-page>
  </form-login-config>
 </login-config>
 <security-role>
  <role-name>admin</role-name>
 </security-role>
 <security-role>
  <role-name>member</role-name>
 </security-role>
 <security-role>
  <role-name>company</role-name>
 </security-role>
 <security-role>
  <role-name>finance</role-name>
 </security-role>
</web-app>
